---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="404 - Page Not Found | Brendon Earl">
  <Header />
  
  <main class="min-h-screen flex items-center justify-center">
    <div class="text-center px-4">
      <!-- Glitchy 404 -->
      <div class="relative mb-8">
        <h1 class="text-8xl sm:text-9xl font-bold text-surface-800">404</h1>
        <h1 class="text-8xl sm:text-9xl font-bold text-primary-500 absolute inset-0 animate-pulse opacity-50">404</h1>
      </div>

      <!-- Terminal Error -->
      <div class="max-w-md mx-auto mb-8">
        <div class="bg-surface-800 rounded-xl border border-surface-700 overflow-hidden">
          <div class="flex items-center space-x-2 px-4 py-2 bg-surface-700/50 border-b border-surface-700">
            <div class="w-3 h-3 rounded-full bg-red-500"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
            <div class="w-3 h-3 rounded-full bg-green-500"></div>
          </div>
          <div class="p-4 font-mono text-sm text-left">
            <div class="text-surface-400">$ find /page</div>
            <div class="text-red-400 mt-1">Error: Page not found</div>
            <div class="text-primary-400 mt-2">$ cd /home <span class="animate-pulse">â–Š</span></div>
          </div>
        </div>
      </div>

      <p class="text-xl text-surface-400 mb-8">
        Looks like this page doesn't exist.
      </p>

      <a 
        href="/" 
        class="inline-flex items-center space-x-2 px-6 py-3 rounded-xl bg-primary-600 hover:bg-primary-500 text-white font-semibold transition-all hover:scale-105"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        <span>Go Home</span>
      </a>
    </div>
  </main>

  <Footer />
</Layout>
