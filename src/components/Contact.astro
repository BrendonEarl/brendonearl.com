---
const contactMethods = [
  {
    icon: 'fab fa-linkedin',
    label: 'LinkedIn',
    value: 'brendon-earl',
    href: 'https://linkedin.com/in/brendon-earl',
    color: 'from-blue-500 to-blue-600',
  },
  {
    icon: 'fab fa-github',
    label: 'GitHub',
    value: 'brendonearl',
    href: 'https://github.com/brendonearl',
    color: 'from-surface-500 to-surface-600',
  },
  {
    icon: 'fas fa-file-pdf',
    label: 'Resume',
    value: 'Download PDF',
    href: '/resume.pdf',
    color: 'from-red-500 to-red-600',
  },
];
---

<section id="contact" class="py-24 bg-surface-800/30">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16 animate-on-scroll">
      <span class="inline-block px-4 py-1 rounded-full bg-primary-500/10 text-primary-400 text-sm font-medium mb-4">
        Get In Touch
      </span>
      <h2 class="text-3xl sm:text-4xl font-bold text-surface-100">
        Let's Connect
      </h2>
    </div>

    <!-- Contact Cards -->
    <div class="grid sm:grid-cols-3 gap-6 mb-12">
      {contactMethods.map((method, index) => (
          <a
              href={method.href}
              target={method.href.startsWith('http') ? '_blank' : undefined}
              rel={method.href.startsWith('http') ? 'noopener noreferrer' : undefined}
              class="group relative p-6 rounded-2xl bg-surface-800 border border-surface-700 hover:border-primary-500/50 transition-all duration-300 hover:scale-105 hover:shadow-xl animate-on-scroll text-center"
              style={`animation-delay: ${index * 0.1}s;`}
          >
            <!-- Icon -->
            <div class={`inline-flex items-center justify-center w-14 h-14 rounded-xl bg-gradient-to-br ${method.color} mb-4 group-hover:scale-110 transition-transform`}>
              <i class={`${method.icon} text-2xl text-white`}></i>
            </div>

            <div class="font-bold text-surface-100 group-hover:text-white transition-colors">
              {method.label}
            </div>
            <div class="text-sm text-surface-400 group-hover:text-primary-400 transition-colors">
              {method.value}
            </div>

            <!-- Hover Arrow -->
            <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity">
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </div>
          </a>
      ))}
    </div>

    <!-- Simple LinkedIn CTA -->
    <div class="text-center animate-on-scroll" style="animation-delay: 0.3s;">
      <a
          href="https://linkedin.com/in/brendon-earl"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center space-x-2 px-6 py-3 rounded-xl bg-primary-600 hover:bg-primary-500 text-white font-semibold transition-all hover:scale-105"
      >
        <i class="fab fa-linkedin text-lg"></i>
        <span>Connect with me on LinkedIn</span>
      </a>
    </div>
  </div>
</section>